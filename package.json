{
  "name": "vite-ssr-boilerplate",
  "author": "Sergey Dyakov",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "dev:server": "nodemon --watch server.ts --watch src/server --exec 'ts-node server.ts'",
    "dev": "yarn build:client && vite --config vite.config.ts dev",
    "build": "rimraf dist && tsc -p tsconfig.json && yarn build:client && yarn build:server && yarn copy-files",
    "build:client": "vite build --outDir dist/client --ssrManifest",
    "build:server": "vite build --ssr src/client/entry-server.tsx --outDir dist/server",
    "copy-files": "copyfiles static/* dist/assets && copyfiles index.html dist && copyfiles -f dist/client/assets/* dist/assets",
    "start": "yarn build && cross-env NODE_ENV=production yarn ts-node ./server",
    "pretty": "prettier --write ."
  },
  "dependencies": {
    "@headlessui/react": "^1.7.15",
    "autoprefixer": "^10.4.14",
    "copyfiles": "^2.4.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.11.2"
  },
  "devDependencies": {
    "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
    "@rollup/plugin-inject": "^5.0.3",
    "@types/copyfiles": "^2.4.1",
    "@types/express": "^4.17.17",
    "@types/node": "^20.2.5",
    "@types/react-dom": "^18.2.4",
    "@types/serve-static": "^1.15.1",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vitejs/plugin-react": "workspace:*",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-no-relative-import-paths": "^1.5.2",
    "eslint-plugin-prettier": "^4.2.1",
    "express": "^4.18.2",
    "nodemon": "^2.0.22",
    "postcss": "^8.4.24",
    "prettier": "^2.8.8",
    "rollup-plugin-polyfill-node": "^0.12.0",
    "serve-static": "^1.15.0",
    "tailwindcss": "^3.3.2",
    "tailwindcss-classnames": "^3.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3",
    "vite": "^4.3.9",
    "vite-tsconfig-paths": "^4.2.0"
  }
}
